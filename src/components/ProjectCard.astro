---
import type { Project } from "@/data/projects";

type Props = Project;

const { title, techs, name, isComingSoon } = Astro.props;

const formatTechs = (values: string[]) =>
    values.toString().replaceAll(",", " â€¢ ");
---

<>
    {
        isComingSoon && (
            <div class="group flex w-full cursor-pointer justify-between gap-2 rounded-md border bg-black/40 backdrop-blur-sm border-gray-100/5 p-4 transition-all duration-300 hover:-translate-y-1 hover:border-neutral-400  md:items-center">
                <div class="flex md:w-full md:items-center justify-between">
                    <p class="text-neutral-100 text-lg">{title}</p>
                    <p class="hidden md:flex text-neutral-500">
                        {formatTechs(techs)}
                    </p>
                </div>
                <p class="w-fit rounded-md bg-neutral-900 px-4 py-1">Soon</p>
            </div>
        )
    }

    {
        !isComingSoon && (
            <a
                class="group flex w-full cursor-pointer justify-between gap-2 rounded-md border bg-black/40 backdrop-blur-sm border-gray-100/5 p-4 transition-all duration-300 hover:-translate-y-1 hover:border-neutral-400  md:items-center"
                href={`/projects/${name}`}
                rel="noreferrer"
            >
                <div class="flex md:w-full md:items-center justify-between">
                    <p class="text-neutral-100 text-lg">{title}</p>
                    <p class="hidden md:flex text-neutral-500">
                        {formatTechs(techs)}
                    </p>
                </div>

                <svg
                    width="18"
                    height="18"
                    viewBox="0 0 18 18"
                    fill="none"
                    class="transition-all duration-300 group-hover:translate-x-1 "
                >
                    <path
                        d="M5.25 12.75L12.75 5.25"
                        stroke="#999999"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    />
                    <path
                        d="M5.25 5.25H12.75V12.75"
                        stroke="#999999"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    />
                </svg>
            </a>
        )
    }
</>
